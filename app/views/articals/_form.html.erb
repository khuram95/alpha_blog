<% if @artical.errors.any?%>
    <ul>
       <%=@artical.errors.full_messages.each do |msg|%>
        <li><%=msg%></li>
       <%end%>
    </ul>
<%end%>
<div class="row">
    <div class="col-xs-12">
        <%= form_for(@artical, :html => {class: "form-horizontal", role:"form"}) do |a|%>
            <div class="form-group">
                <div class="control-lable col-sm-2">
                    <%= a.label:title%>
                </div>
                <div class="col-sm-10">
                     <%=a.text_field:title,class: "form-control",placeholder:"title of article", autofocus: true %>
                </div>
            </div>
            
            <div class="form-group">
                <div class="control-lable col-sm-2">
                     <%= a.label:description%>
                </div>
                <div class="col-sm-10">
                     <%=a.text_area:description,rows:10,class: "form-control",placeholder:"description of article", autofocus: true %>
                </div>
            </div>
            
             <div class="form-group">
                <div class="control-lable col-sm-offset-2 col-sm-12">
                     <%=a.submit class: "btn btn-primary btn btn-lg"%>
                </div>
            </div>
            <div class="form-group">
                <div class="control-lable col-sm-4 col-sm-offset-4">
                     <%=link_to "[cancel request and Back to listing]",articals_path%>
                </div>
            </div>
        <%end%>
    </div>
</div>
     
