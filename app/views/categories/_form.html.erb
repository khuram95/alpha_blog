<%= render 'shared/errors',obj: @category%>
<div class="row">
    <div class="col-xs-12">
        <%= form_for(@category, :html => {class: "form-horizontal", role:"form"}) do |a|%>
            <div class="form-group">
                <div class="control-lable col-sm-2">
                    <%= a.label:name%>
                </div>
                <div class="col-sm-10">
                     <%=a.text_field:name,class: "form-control",placeholder:"username", autofocus: true %>
                </div>
            </div>
            
             <div class="form-group">
                <div class="control-lable col-sm-offset-2 col-sm-12">
                    <%= a.submit class: 'btn btn-primary btn-lg' %>
                </div>
            </div>
            
            <div class="form-group">
                <div class="control-lable col-sm-4 col-sm-offset-4">
                     <%=link_to "[cancel request and Back to listing]",articals_path%>
                </div>
            </div>
        <%end%>
    </div>
</div>