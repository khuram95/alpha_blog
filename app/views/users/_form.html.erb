<%= render 'shared/errors',obj:@user%>
<div class="row">
    <div class="col-xs-12">
        <%= form_for(@user, :html => {class: "form-horizontal", role:"form"}) do |a|%>
            <div class="form-group">
                <div class="control-lable col-sm-2">
                    <%= a.label:username%>
                </div>
                <div class="col-sm-10">
                     <%=a.text_field:username,class: "form-control",placeholder:"username", autofocus: true %>
                </div>
            </div>
            
            <div class="form-group">
                <div class="control-lable col-sm-2">
                     <%= a.label:email%>
                </div>
                <div class="col-sm-10">
                     <%=a.email_field:email,class: "form-control",placeholder:"enter your email", autofocus: true %>
                </div>
            </div>
            
            <div class="form-group">
                <div class="control-lable col-sm-2">
                     <%= a.label:password%>
                </div>
                <div class="col-sm-10">
                     <%=a.password_field:password,class: "form-control",placeholder:"enter your password", autofocus: true %>
                </div>
            </div>
            
             <div class="form-group">
                <div class="control-lable col-sm-offset-2 col-sm-12">
                    <%= a.submit(@user.new_record? ? "Sign up" : "Update account", class: 'btn btn-primary btn-lg') %>
                </div>
            </div>
            <div class="form-group">
                <div class="control-lable col-sm-4 col-sm-offset-4">
                     <%=link_to "[cancel request and Back to listing]",articals_path%>
                </div>
            </div>
        <%end%>
    </div>
</div>